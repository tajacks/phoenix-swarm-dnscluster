<div class="flex flex-col items-center justify-center">
  <h1 class="text-4xl font-bold mb-8"><%= @self %></h1>
  <table class="border-collapse border border-gray-300">
    <thead>
      <tr>
        <th class="border border-gray-300 px-4 py-2">Connected Nodes</th>
      </tr>
    </thead>
    <tbody>
      <%= for node <- @nodes do %>
        <tr>
          <td class="border border-gray-300 px-4 py-2"><%= node %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
